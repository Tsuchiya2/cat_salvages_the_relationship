- if current_user.operator?
  = form_with model: content, url: url, local: true do |f|
    .form-group.my-5.offset-2.col-8
      = f.label :body, Content.human_attribute_name(:body)
      = f.text_field :body, class: 'form-control rounded-pill'
    .form-group.my-5.offset-2.col-8
      = f.label :category, Content.human_attribute_name(:category)
      = f.select :category, Content.categories_i18n.invert, {}, class: 'form-control rounded-pill'
    .form-group.my-5
      = f.submit '🐾 送信 🐾', class: 'btn btn-secondary rounded-pill font-monospace'
