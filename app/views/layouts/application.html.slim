doctype html
html
  head
    title
      | CatSalvagesTheRelationship
    meta[name="viewport" content="width=device-width,initial-scale=1"]
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_pack_tag 'application'
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-success.fixed-top
      = link_to 'タイトル(仮)', root_path, class: 'navbar-brand ps-3'
