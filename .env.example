# Database Configuration
# MySQL 8.0+ connection settings

# Database Host (default: localhost)
DB_HOST=localhost

# Database Port (default: 3306)
DB_PORT=3306

# Database Name
# Development: reline_development
# Test: reline_test
# Production: set to your production database name
DB_NAME=reline_development

# Database Username
DB_USERNAME=root

# Database Password
DB_PASSWORD=

# SSL Configuration (Production only)
# Path to SSL Certificate Authority file
DB_SSL_CA=

# Path to SSL Key file
DB_SSL_KEY=

# Path to SSL Certificate file
DB_SSL_CERT=

# Rails Configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5
