# =============================================================================
# Environment Variables for ReLINE Application
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_USERNAME=root
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=reline_development

# For test environment (optional)
# DB_NAME=reline_test

# -----------------------------------------------------------------------------
# LINE Messaging API
# -----------------------------------------------------------------------------
# Get these from LINE Developers Console: https://developers.line.biz/
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_TOKEN=your_line_channel_access_token

# -----------------------------------------------------------------------------
# Rails Configuration
# -----------------------------------------------------------------------------
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Master key for credentials (production only)
# RAILS_MASTER_KEY=your_master_key

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# Brute force protection settings
OPERATOR_LOCK_RETRY_LIMIT=5
OPERATOR_LOCK_DURATION=45

# Session timeout in minutes (optional)
# SESSION_TIMEOUT=60

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
# Used for generating absolute URLs in emails and callbacks
# APP_HOST=localhost:3000
# APP_PROTOCOL=http

# Production example:
# APP_HOST=www.cat-reline.com
# APP_PROTOCOL=https

# -----------------------------------------------------------------------------
# Email Configuration (Production)
# -----------------------------------------------------------------------------
# SMTP settings for sending emails
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_DOMAIN=example.com
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# -----------------------------------------------------------------------------
# Monitoring & Observability (Optional)
# -----------------------------------------------------------------------------
# Prometheus metrics endpoint
# PROMETHEUS_ENABLED=true

# Sentry/Error tracking
# SENTRY_DSN=https://your_sentry_dsn

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for caching/ActionCable)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379/0
